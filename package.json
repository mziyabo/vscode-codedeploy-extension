{
  "name": "vscode-codedeploy-extension",
  "displayName": "AWS CodeDeploy Extension",
  "version": "0.0.1",
  "description": "vscode CodeDeploy Extension",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "postbuild": "copy ./resources/ ./out/ -Recurse -Force",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "CodeDeploy"
  ],
  "author": "mziyabo@live.com",
  "license": "Apache 2.0",
  "dependencies": {
    "@types/node": "^12.7.5",
    "@types/vscode": "^1.38.0",
    "adm-zip": "^0.4.13",
    "aws-sdk": "^2.528.0",
    "vscode": "^1.1.36"
  },
  "devDependencies": {
    "typescript": "^3.6.3",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-multi-reporters": "^1.1.7",
    "mocha": "^6.2.2"
  },
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "cdExplorer",
          "name": "AWS CodeDeploy"
        }
      ]
    },
    "commands": [
      {
        "command": "cdExplorer.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "cdExplorer.openconsole",
        "title": "Open Console"
      },
      {
        "command": "cdExplorer.create",
        "title": "Create Application"
      },
      {
        "command": "cdExplorer.select",
        "title": "Add Existing Application"
      },
      {
        "command": "cdExplorer.remove",
        "title": "Delete Application"
      },
      {
        "command": "cdExplorer.deploy",
        "title": "Deploy"
      },
      {
        "command": "cdExplorer.stop",
        "title": "Stop"
      },
      {
        "command": "cdExplorer.viewDeployment",
        "title": "Details"
      },
      {
        "command": "cdExplorer.delete",
        "title": "Delete"
      },
      {
        "command": "cdExplorer.configureRevisionLocations",
        "title": "Configure Revision Locations"
      }
    ],
    "menus": {
      "commandPalette": [],
      "view/title": [
        {
          "command": "cdExplorer.refresh",
          "when": "view == cdExplorer",
          "group": "navigation"
        },
        {
          "command": "cdExplorer.openconsole",
          "when": "view == cdExplorer",
          "group": "1_application_view"
        },
        {
          "command": "cdExplorer.select",
          "when": "view == cdExplorer && !config.codedeploy.linkedToCodedeployApplication",
          "group": "application_mod"
        },
        {
          "command": "cdExplorer.create",
          "when": "view == cdExplorer && !config.codedeploy.linkedToCodedeployApplication",
          "group": "application_mod"
        },
        {
          "command": "cdExplorer.refresh",
          "when": "view == cdExplorer",
          "group": "shared_common"
        }
      ],
      "view/item/context": [
        {
          "command": "cdExplorer.openconsole",
          "when": "view == cdExplorer && (viewItem == deploymentGroup || viewItem =~ /^application/)",
          "group": "application@1"
        },
        {
          "command": "cdExplorer.delete",
          "when": "view == cdExplorer && viewItem == application && config.codedeploy.linkedToCodedeployApplication",
          "group": "application_manage@1"
        },
        {
          "command": "cdExplorer.configureRevisionLocations",
          "when": "view == cdExplorer && viewItem == application",
          "group": "application_manage@2"
        },
        {
          "command": "cdExplorer.deploy",
          "when": "view == cdExplorer && viewItem == deploymentGroup",
          "group": "deploymentGroup@1"
        },
        {
          "command": "cdExplorer.viewDeployment",
          "when": "view == cdExplorer && viewItem == deployment",
          "group": "1_view_deployment"
        },
        {
          "command": "cdExplorer.refresh",
          "when": "view == cdExplorer",
          "group": "z_extension"
        }
      ]
    },
    "configuration": [
      {
        "title": "AWS CodeDeploy",
        "properties": {
          "codedeploy.region": {
            "type": "string",
            "description": "AWS Region"
          },
          "codedeploy.applicationName": {
            "type": "string",
            "description": "Default AWS CodeDeploy application name for workspace",
            "title": "AWS CodeDeploy Application Name"
          },
          "codedeploy.deploymentGroupName": {
            "type": "string",
            "description": "CodeDeploy Deployment Group"
          },
          "codedeploy.revisionBucket": {
            "type": "string",
            "description": "CodeDeploy Revision Bucket"
          },
          "codedeploy.linkedToCodedeployApplication": {
            "type": "boolean",
            "description": "Linked to CodeDeploy Application",
            "readOnly": true
          }
        }
      }
    ]
  },
  "engines": {
    "vscode": "^1.31.0"
  },
  "activationEvents": [
    "onView:explorer",
    "onView:cdExplorer"
  ]
}
