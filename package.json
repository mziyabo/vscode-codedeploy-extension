{
  "name": "vscode-codedeploy-extension",
  "displayName": "AWS CodeDeploy Extension",
  "version": "0.0.1",
  "description": "vscode CodeDeploy Extension",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "postbuild": "copy ./resources/ ./out/ -Recurse -Force",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "CodeDeploy"
  ],
  "author": "mziyabo@live.com",
  "license": "Apache 2.0",
  "preview": true,
  "dependencies": {
    "@types/node": "^12.7.5",
    "@types/vscode": "^1.38.0",
    "adm-zip": "^0.4.13",
    "aws-sdk": "^2.528.0",
    "vscode": "^1.1.36",
    "vscode-nls": "^4.1.1"
  },
  "devDependencies": {
    "typescript": "^3.6.3",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-multi-reporters": "^1.1.7",
    "mocha": "^6.2.2",
    "vscode-nls-dev": "^3.3.1"
  },
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "cdExplorer",
          "name": "AWS CodeDeploy"
        }
      ]
    },
    "commands": [
      {
        "command": "cdExplorer.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "cdExplorer.openconsole",
        "title": "%cdExplorer.openConsole.title%"
      },
      {
        "command": "cdExplorer.createApplication",
        "title": "%cdExplorer.createApplication.title%"
      },
      {
        "command": "cdExplorer.selectApplication",
        "title": "%cdExplorer.selectExisting.title%",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "cdExplorer.unlinkWorkspace",
        "title": "%cdExplorer.unlinkWorkspace.title%"
      },
      {
        "command": "cdExplorer.deploy",
        "title": "%cdExplorer.deployApplication.title%",
        "icon" :{
          "light":"resources/light/deploy.svg",
          "dark": "resource/dark/deploy.svg"
        }
      },
      {
        "command": "cdExplorer.stop",
        "title": "%cdExplorer.stopDeployment.title%"
      },
      {
        "command": "cdExplorer.viewDeployment",
        "title": "%cdExplorer.viewDeployment.title%"
      },
      {
        "command": "cdExplorer.deleteApplication",
        "title": "%cdExplorer.deleteApplication.title%"
      },
      {
        "command": "cdExplorer.configureRevisionLocations",
        "title": "%cdExplorer.configureRevisionLocation.title%"
      },
      {
        "command": "cdExplorer.addEC2Tag",
        "title": "%cdExplorer.addEC2Tag.title%"
      },
      {
        "command": "cdExplorer.addASG",
        "title": "%cdExplorer.addASG.title%"
      },
      {
        "command": "cdExplorer.createDeploymentGroup",
        "title": "%cdExplorer.createDeploymentGroup.title%"
      },
      {
        "command": "cdExplorer.deleteDeploymentGroup",
        "title": "%cdExplorer.deleteDeploymentGroup.title%"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "cdExplorer.selectApplication",
          "when": "never"
        },
        {
          "command": "cdExplorer.openconsole",
          "when": "never"
        },
        {
          "command": "cdExplorer.deploy",
          "when": "never"
        },
        {
          "command": "cdExplorer.deleteApplication",
          "when": "never"
        },
        {
          "command": "cdExplorer.createApplication",
          "when": "!config.codedeploy.linkedToCodedeployApplication"
        },
        {
          "command": "cdExplorer.deleteApplication",
          "when": "config.codedeploy.linkedToCodedeployApplication"
        },
        {
          "command": "cdExplorer.configureRevisionLocations",
          "when": "config.codedeploy.linkedToCodedeployApplication"
        },
        {
          "command": "cdExplorer.deploy",
          "when": "config.codedeploy.linkedToCodedeployApplication"
        },
        {
          "command": "cdExplorer.viewDeployment",
          "when": "never"
        },
        {
          "command": "cdExplorer.addEC2Tag",
          "when": "never"
        },
        {
          "command": "cdExplorer.addASG",
          "when": "never"
        }
      ],
      "view/title": [
        {
          "command": "cdExplorer.selectApplication",
          "when": "view == cdExplorer && !config.codedeploy.linkedToCodedeployApplication",
          "group": "navigation"
        },
        {
          "command": "cdExplorer.refresh",
          "when": "view == cdExplorer",
          "group": "navigation"
        },
        {
          "command": "cdExplorer.openconsole",
          "when": "view == cdExplorer",
          "group": "1_application_view"
        },
        {
          "command": "cdExplorer.createApplication",
          "when": "view == cdExplorer && !config.codedeploy.linkedToCodedeployApplication",
          "group": "application_mod"
        },
        {
          "command": "cdExplorer.selectApplication",
          "when": "view == cdExplorer && !config.codedeploy.linkedToCodedeployApplication",
          "group": "application_mod"
        },
        {
          "command": "cdExplorer.unlinkWorkspace",
          "when": "view == cdExplorer && config.codedeploy.linkedToCodedeployApplication",
          "group": "application_mod"
        },
        {
          "command": "cdExplorer.refresh",
          "when": "view == cdExplorer",
          "group": "shared_common"
        }
      ],
      "view/item/context": [
        {
          "command": "cdExplorer.openconsole",
          "when": "view == cdExplorer && viewItem =~ /application|deployment|autoScalingGroups/",
          "group": "application@1"
        },
        {
          "command": "cdExplorer.deleteApplication",
          "when": "view == cdExplorer && viewItem == application && config.codedeploy.linkedToCodedeployApplication",
          "group": "application_manage@1"
        },
        {
          "command": "cdExplorer.configureRevisionLocations",
          "when": "view == cdExplorer && viewItem == application",
          "group": "application_manage@2"
        },
        {
          "command": "cdExplorer.deploy",
          "when": "view == cdExplorer && viewItem == deploymentGroup",
          "group": "deploymentGroup@1"
        },
        {
          "command": "cdExplorer.viewDeployment",
          "when": "view == cdExplorer && viewItem == deployment",
          "group": "1_view_deployment"
        },
        {
          "command": "cdExplorer.refresh",
          "when": "view == cdExplorer && viewItem =~ /application|deployment|ec2TagFilter|autoScalingGroups/",
          "group": "z_extension"
        },
        {
          "command": "cdExplorer.addEC2Tag",
          "when": "viewItem == ec2TagFilters",
          "group": "ec2TagManage@1"
        }
      ]
    },
    "configuration": [
      {
        "title": "AWS CodeDeploy",
        "properties": {
          "codedeploy.region": {
            "type": "string",
            "description": "%codedeploy.region.description%"
          },
          "codedeploy.applicationName": {
            "type": "string",
            "description": "Default AWS CodeDeploy application name for workspace",
            "title": "%codedeploy.applicationName.title%"
          },
          "codedeploy.deploymentGroupName": {
            "type": "string",
            "description": "%codedeploy.deploymentGroupName.description%"
          },
          "codedeploy.revisionBucket": {
            "type": "string",
            "description": "%codedeploy.revisionBucket.description%"
          },
          "codedeploy.revisionLocalDirectory": {
            "type": "string",
            "description": "%codedeploy.revisionLocalDirectory.description%"
          },
          "codedeploy.linkedToCodedeployApplication": {
            "type": "boolean",
            "description": "%codedeploy.linkedToCodedeployApplication.description%",
            "readOnly": true,
            "default": false
          }
        }
      }
    ]
  },
  "engines": {
    "vscode": "^1.31.0"
  },
  "activationEvents": [
    "onView:explorer",
    "onView:cdExplorer"
  ]
}